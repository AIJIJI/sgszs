<view class="container">
  <view class="function-groups">
    <button class="function-btn" bindtap="tapLangxi">狼袭</button>
    <button class="function-btn" bindtap="tapXionghuo">凶镬</button>
    <button class="function-btn" bindtap="tapShanli">擅立</button>
    <button class="function-btn" bindtap="tapCaoyi">曹裔</button>
  </view>
  <view class="function-groups">
    <view class="function-title">许昭</view>
    <button class="function-btn" data-poolname="Chupai" bindtap="tapxushaoActive">出牌</button>
    <button class="function-btn" data-poolname="Shoushang" bindtap="tapxushaoActive">受伤</button>
    <button class="function-btn" data-poolname="Jieshu" bindtap="tapxushaoActive">结束</button>
    <button class="function-btn" bindtap="tapxushaoReset">重置</button>
  </view>
  <view class="function-groups">
    <view class="function-title">王允</view>
    <button class="function-btn" bindtap="tapShanghaipai">伤害牌</button>
    <button class="function-btn" bindtap="tapJingong">矜功</button>
  </view>
  <view class="function-group-content">
      
        <button class="function-btn" bindtap="tapGeweishu">个位数</button>
  </view>

</view>
<modal wx:if="{{xushao.showModal}}" no-cancel="true" confirm-text="">
  <block 
    wx:for="{{xushao.options}}"
    wx:for-index="index"
    wx:for-item="item"
  >
    <view
      style="display:flex; justify-content: flex-start;"
    >
      <button
        style="width:1000px; heigt: 30px"
        data-option="{{item}}"
        bindtap="tapxushaoChoose"
      >
        {{item}}  
      </button>
        <button
          wx:if="{{SKILLS[item].xushaoText}}"
          class="circle"
          data-option="{{item}}"
          bindtap="tapXushaoInfo"
        >
          ?
        </button>
      </view>
    </block>
  选择技能并移出技能池
</modal>