html,body{
  height:100vh;
  width:100vw;
  margin:0;
  overflow:hidden;
  position:relative;
}
canvas{
  background:url('../../images/flip/background.png') no-repeat;
  background-size: 100% 100%;
}

.pieces{
  position:absolute;
  left:100px;
  top:10px;
  /*width:84px;
  height:84px;*/
  border-radius:50%;
  border:rgb(78,56,23) double 8px;
  background-color:rgb(192,149,106);
  margin:auto;text-align:center;
  font:2em "楷体";
  padding:0.3em;
  line-height:1;
  text-shadow:0px 0px 2px white;
  box-shadow:3px 3px 2px black;
  float:left;
  margin:10px;
  cursor: pointer;
  transform:translate(-50%,-50%);
  color:white;
}

.gameover{
  animation:gameoverAnimation 3s forwards;


}
@keyframes gameoverAnimation {

  to{
      padding:1em;
      top:50%;
      left:50%
  }
}